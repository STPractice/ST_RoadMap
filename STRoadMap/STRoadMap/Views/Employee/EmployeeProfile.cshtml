@using Domain
@model Domain.Employee
<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/Profile.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Profile</title>
</head>
<body>
    <div class="items-container">
        <div class="flex-container">
            <div id="profilePhoto">
                <img id="profileImage" src="~/Content/photo.jpg" alt="photo" style="width:90%; margin-left:5%; border: 3px solid; border-radius: 5px;" />
            </div>
            <div id="profileInfo">
                <div class="userJobInfo">
                    @{
                        string empName = Model.Name;
                        <p id="userName">@empName</p>
                        foreach (var skillMatrix in Model.SkillMatrices)
                        {
                            <p class="userSpecialization">@skillMatrix.Specialization.Name</p>
                        }
                        foreach (var role in Model.AspNetUser.AspNetRoles)
                        {
                            <p class="userRole">@role.Name</p>
                        }
                    }
                </div>
                <div id="exInfo" class="Info-box">                    
                            <table>
                                <tr>
                                    <td colspan="2">
                                        @Html.ActionLink("Pass performance review", "PerformanceReview", new { EmployeeId = Model.EmpolyeeId }, new { @class = "prof-button", style = "margin-bottom:10px;" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.ActionLink("Skill matrix", "SkillMatrix", new { EmployeeId = Model.EmpolyeeId }, new { @class = "prof-button" })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Road map", "RoadMap", new { EmployeeId = Model.EmpolyeeId }, new { @class = "prof-button", style = "margin-left: 8px;" })
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</body>
</html>
