@model IEnumerable<Domain.Employee>
<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/HRLists.css" />
    <meta name="viewport" content="width=device-width" />
    <title>EmployeeList</title>
</head>
<body>
<div class="list-block">
    <div class="items-container">
        <table class="table" style="border-top: 0px solid ">
            <tr class=" rowContainer" style="background-color:#ffffff; border: none;">
                <td style="border-top: none;">
                    <h1>EmployeeList</h1>
                </td>
            </tr>
        </table>


        <table class="table">

            @foreach (var item in Model)
            {

                <tr class=" rowContainer">
                    <td class="lableContainer" style="border-top: none;">
                        @Html.ActionLink(item.Name + " (" + item.AspNetUser.Email + ")", "Employee", new { RoadMapId = item.EmpolyeeId }, htmlAttributes: new { @class = "lable" })
                    </td>
                    <td style="border-top: none;">
                        <div class="row" style="align-items:flex-end">
                            <div class="buttonContainer">
                                
                                    @if (item.RoadMaps.FirstOrDefault() != null)
                {
                    @Html.ActionLink("RoadMap", "RoadMap", routeValues: new { RoadMapId = item.RoadMaps.FirstOrDefault().RoadMapId }, htmlAttributes: new { @class = "edit" });
                }
                else
                {
                    @Html.ActionLink("RoadMap", "RoadMap", routeValues: null, htmlAttributes: new { @class = "edit", style="margin-right:0px;" });
                }
            
                            </div>
                        </div>
                    </td>
                </tr>

            }
        </table>
    </div>
</div>
</body>
</html>


