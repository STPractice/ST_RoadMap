@model IEnumerable<Domain.Position>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PositionList</title>
</head>
<body>
    <p>
        
        
            @Html.ActionLink("Create new position", "CreatePosition", new { SpecializationId=ViewBag.SpecialiationId })
        
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>                
                <td>    
                    @Html.ActionLink( "Edit", "PositionEdit", new { PositionId = item.PositionId }) 
                    @using (Html.BeginForm())
                    {
                        <input type="hidden" name="PositionId" value="@item.PositionId">
                        <input type="hidden" name="SpecializationId" value="@item.SpecializationId">
                        <input type="submit" value="Delete">
                    }
                </td>
            </tr>
        }

    </table>
</body>
</html>
