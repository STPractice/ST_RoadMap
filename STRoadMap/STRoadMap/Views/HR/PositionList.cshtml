@model IEnumerable<Domain.Position>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/HRLists.css" />
    <meta name="viewport" content="width=device-width"/>
    <title>PositionList</title>
</head>
<body>
    <div class="list-block">
        <div class="items-container">
            <div class="addbuttoncontainer">
                @Html.ActionLink("Create new position ", "CreatePosition", routeValues: new { }, htmlAttributes: new
                {
                    @class = "add"
                })
            </div>
            <div>
                <table class="table">
                    <tr>
                        <th>
                            <p>Positions</p>
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {

                        <tr class=" rowContainer">
                            <td class="lableContainer">
                                @Html.ActionLink(item.Name, "Position", new { PositionId = item.PositionId }, htmlAttributes: new
                                {
                                    @class = "lable"
                                })
                            </td>
                            <td>
                                <div class="row">
                                    <div class="buttonContainer">
                                        @Html.ActionLink("Edit", "EditPosition", routeValues: new
                                   {
                                       PositionId = item.PositionId,
                                   }
                          , htmlAttributes: new
                          {
                              @class = "edit"
                          })
                                    </div>

                                    <div class="buttonContainer">
                                        @using (Html.BeginForm())
                                        {
                                            <input type="hidden" name="PositionId" value="@item.PositionId">
                                            <input type="submit" value="Delete" class="delete">
                                        }
                                    </div>
                                </div>
                            </td>
                        </tr>

                    }
                </table>
            </div>
        </div>
    </div>
</body>
</html>
