@model IEnumerable<Domain.Position>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PositionList</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create new position", "CreatePosition")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization.Name)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { PositionId=item.PositionId }) |
                @using (Html.BeginForm())
                {
                    <input type="hidden" name="PositionId" value="@item.PositionId">
                    <input type="submit" value="Delete">
                }
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
