@model Domain.Skill

@{
    ViewBag.Title = "Create Skill";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/HRCreateSkill.css" />
    <script defer src="~/Scripts/HR/CreateSkill/HRCreateSkill.js"></script>
    <script defer src="~/Scripts/HR/CreateSkill/jquery.js"></script>
</head>
<body>

    <div class="skill-container">

        <form method="post" class="createSkill">
            <div id="createSkill">
                <p>Skill name</p>
                <input type="text" name="Name" id="skillname" required>

                <div class="createSkill-block" id="0">
                    <div class="delete" id="delete0">X</div>
                    <div class="skillName">
                        <p>Name</p>
                        <input type="text" name="SkillLevels.Name" id="name" required>
                    </div>
                    <div class="description-block">
                        <p>Description</p>
                        <textarea name="SkillLevels.Description" id="description" cols="30" rows="10" class="description" required></textarea>
                    </div>
                    <input type="hidden" name="SkillLevels.Level" value="0" />
                </div>
            </div>
            <div>
                <input type="submit" class="submit" value="Submit">
                <div class="add" id="add">+</div>
            </div>
        </form>

    </div>
</body>
</html>
